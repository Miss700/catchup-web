<a href="<%= url_for([card.board, card]) %>" class="card card-1 clearfix" data-role="card" data-card-id="<%= card.id %>">
  <p class="text"><%= card.title %></p>
  <%= form_for [:move, card.board, card], remote: true, data: { role: "card-update-form" } do |f| %>
    <%= f.hidden_field :list_id %>
    <%= f.hidden_field :position %>
  <% end %>
</a>
