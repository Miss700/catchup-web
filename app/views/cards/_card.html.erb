<div class="cards-_card clearfix">

<a class="card-wrapper clearfix"
   href="<%= url_for([card.board, card]) %>"
   data-role="card"
   data-card-id="<%= card.id %>">

  <div class="card-title-container clearfix">
    <p class="<%= list_class %>-card-title"><%= card.title %></p>
  </div>

  <%= form_for [:move, card.board, card], remote: true, data: { role: "card-update-form" } do |f| %>
    <%= f.hidden_field :list_id %>
    <%= f.hidden_field :position %>
  <% end %>
</a>

</div>
