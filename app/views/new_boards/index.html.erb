<%= content_for :main_action do %>
  <%= render "header_action" %>
<% end %>

<% if @boards.empty? %>
<div class="no-boards-container clearfix">
  <%= render "no_boards" %>
</div>
<% end %>

<div class="all-boards-container clearfix">
  <%= render "all_boards", boards: @boards %>
</div>

<div class="create-board-container clearfix">
  <%= render "create_board", boards: @boards %>
</div>
