<!DOCTYPE html>
<html>
<head>
  <title>TaskPlanner</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main-grid" class="container">

  <%= t('greeting', user: session[:current_user]) if signed_in? %>
  <%= link_to t('see_boards'), boards_path %>

  <%= render "flashes" %>

  <%= yield %>

</div>

</body>
</html>
